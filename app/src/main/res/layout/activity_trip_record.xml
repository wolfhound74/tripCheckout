        <LinearLayout
                android:id="@+id/prepaidSumBlock"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Предоплата"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prepaidSumLabel"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prepaidSum"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Скидка"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discountLabel"
                    android:width="30sp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <EditText
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discount"
                    android:width="30sp"
                    android:textSize="16sp"
                    android:text="0 ₽"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Сдача"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moneyBackLabel"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <EditText
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moneyBack"
                    android:textSize="16sp"
                    android:text="0 ₽"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Итого"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultSum"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultSumText"
                    android:textSize="32sp"
                    android:text="0 руб"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>

        <Button
                android:id="@+id/confirmTripRecordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="#28a745"
                android:gravity="center"
                android:padding="5dip"
                android:text="Подтвердить"
                android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>
