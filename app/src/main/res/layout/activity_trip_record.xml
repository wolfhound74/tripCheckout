<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <Spinner
            android:id="@+id/packets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text=""
            android:layout_below="@id/packets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/commentFromVk"/>
    <ListView
            android:background="#f5f5f5"
            android:layout_below="@id/commentFromVk"
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom_bar"/>


    <LinearLayout
            android:id="@+id/layout_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#d4d4d4"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dip">

        <LinearLayout
                android:padding="5dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="Прокат"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderedKit"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderedKitText"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:padding="5dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="Предоплата"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prepaidSumText"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
                android:padding="5dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="НЕ ЗАБЫВАЕМ ПРО ЗАЛОГ 100 ₽"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

        </LinearLayout>


