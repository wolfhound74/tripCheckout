<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <Spinner
            android:id="@+id/packets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text=""
            android:layout_below="@id/packets"
            android:layout_width="match_parent"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="5sp"
            android:layout_height="wrap_content" android:id="@+id/commentFromVk"/>

    <TextView
            android:text=""
            android:layout_below="@id/commentFromVk"
            android:layout_width="match_parent"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="5sp"
            android:layout_height="wrap_content" android:id="@+id/orderedKit"/>

    <ListView
            android:background="#f5f5f5"
            android:layout_below="@id/orderedKit"
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom_bar"/>


    <LinearLayout
            android:id="@+id/layout_bottom_bar"
            android:layout_width="match_parent"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#d4d4d4"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Скидка"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discountLabel"
                    android:width="30sp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <EditText
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/discount"
                    android:width="30sp"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="#000"
                    android:layout_weight="0"/>

            <TextView
                    android:gravity="right"
                    android:text="₽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Сдача"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moneyBackLabel"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <EditText
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/moneyBack"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="#000"
                    android:layout_weight="0"/>
            <TextView
                    android:gravity="right"
                    android:text="₽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/prepaidSumBlock"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Предоплата"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prepaidSumLabel"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <EditText
                    android:gravity="right"
                    android:inputType="number"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/prepaidSum"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="#000"
                    android:layout_weight="0"/>
            <TextView
                    android:gravity="right"
                    android:text="₽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="Итого"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultSum"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultSumText"
                    android:textSize="32sp"
                    android:text="0 ₽"
                    android:textColor="#000"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <Button
                    android:id="@+id/plusOne"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:background="#2196F3"
                    android:padding="5dip"
                    android:text="+"
                    android:textColor="#FFFFFF" />

            <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/confirmTripRecordButton"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:background="#28a745"
                    android:padding="5dip"
                    android:text="Подтвердить"
                    android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
